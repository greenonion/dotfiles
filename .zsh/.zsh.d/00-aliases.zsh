# Aliases
# various ls helpers
alias ls='ls -GF'
alias l.='ls -d .*'
alias ll='ls -lh'
alias l='ls -lh'
alias la='ls -alh'
alias lr='ls -lR'
# colorize greps
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
# make less a little more sane
alias less='less -RX'
# time helpers
alias epoch='date +%s'
alias dt='gdate "+%Y-%m-%dT%H:%M:%S.%3N%zZ"'
